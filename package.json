{
    "name": "uvo-amsterdam",
    "description": "UvO Amsterdam Website",
    "version": "0.0.0",
    "license": "UNLICENSED",
    "private": true,
    "engines": {
        "node": ">=22",
        "pnpm": ">=10"
    },
    "packageManager": "pnpm@10.23.0",
    "type": "module",
    "repository": {
        "type": "git",
        "directory": "/",
        "url": "https://github.com/dennisb-ah/uvo-amsterdam.git"
    },
    "scripts": {
        "clean": "rimraf .next node_modules coverage .swc",
        "postinstall": "husky",
        "dev": "next dev --turbopack",
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
        "----- Lint & Format -----": "-----",
        "format": "biome check . --fix",
        "format-n-lint": "biome check . && stylelint **/*.scss",
        "format-n-lint:fix": "biome check . --fix && stylelint **/*.scss --fix",
        "format-n-lint:ci": "biome ci --error-on-warnings && stylelint \"**/*.{css,scss,sass}\"",
        "pre-commit": "pnpm format-n-lint:fix"
    },
    "dependencies": {
        "@biomejs/biome": "2.3.7",
        "@radix-ui/themes": "^3.2.1",
        "@tabler/icons-react": "3.35.0",
        "husky": "^9.1.7",
        "next": "16.0.7",
        "react": "19.2.1",
        "react-dom": "19.2.1",
        "rimraf": "^6.0.1",
        "sass": "1.94.2",
        "stylelint": "^16.25.0"
    },
    "devDependencies": {
        "@tailwindcss/postcss": "^4",
        "@types/node": "^24",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "csstype": "3.2.0",
        "lint-staged": "16.2.7",
        "stylelint-config-standard-scss": "16.0.0",
        "tailwindcss": "^4",
        "typescript": "^5"
    },
    "lint-staged": {
        "*.{css,scss,sass}": "stylelint --fix",
        "*.{js,cjs,mjs,jsx,ts,tsx,graphql,json,jsonc}": "biome check --fix --files-ignore-unknown=true --no-errors-on-unmatched"
    }
}
